<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Template MongoDB</title>
    @Styles.Render("~/Content/themes/css")
    @Styles.Render("~/Content/css")
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="@Url.Content("~/Scripts/html5shiv.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/respond.min.js")"></script>
    <![endif]-->
</head>
<body id="mainBody">
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Navegação</span> <span class="icon-bar"></span><span class="icon-bar">
                </span><span class="icon-bar"></span>
            </button>
            <div class="goHome">
                <i class="glyphicon glyphicon-record"></i>
                <div class="navbar-brand">
                    <span class="home-link">Template MongoDB</span>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">                
            </div>
        </div>
    </nav>
    <div class="container-fluid ">
        <div class="row" id="modalContainer">
            @*<div id="closeSidebar" class="pin" title="fechar menu"><i class="glyphicon glyphicon-pushpin" style="color:White"></i></div>*@
            <div class="sidebar">
                <ul class="nav navbar-nav">                    
                    @Html.ActionLinkMenu("Home", "~/")                    
                    @Html.ActionLinkMenu("Employees", "~/Employee/")
                    @Html.ActionLinkMenu("Occupations", "~/Occupation/")
                </ul>
            </div>
            <div id="mainContainer" class="col-sm-8 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                @RenderSection("featured", required: false)
                <div id="containerText">
                    @RenderBody()
                </div>
                <div id="lblError">
                </div>
            </div>
        </div>
    </div>
    <div id="imgLoader" class="hide">
        <img alt="" src="@Url.Content("~/Images/loader.gif")">
    </div>
    <div id="imgLoaderPeq" class="hide">
        <img alt="" src="@Url.Content("~/Images/load_circ.gif")">
    </div>
    <!-- Modal -->
    <div class="modal" id="myModal" role="dialog" data-focus-on="input:first">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <i class="glyphicon glyphicon-remove-circle pull-right" data-dismiss="modal"></i><span class="modal-title">Título</span>
                </div>                
                <div class="modal-body" id="lblModalBody">
                    <!--aqui vai o conteudo-->
                </div>
                <div id="lblLoader" class="row text-center pull-center panel-body"><img alt="" src="@Url.Content("~/Images/loader.gif")"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-confirm="modal">
                        Ok
                    </button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        Fechar
                    </button>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/Scripts/js")
    @RenderSection("scripts", required: false)
</body>
</html>
