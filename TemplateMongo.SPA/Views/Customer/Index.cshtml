@{
    Layout = null;
}
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Clientes <small>Manutenção</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a id="lblGridCustomer" class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#/Customer/Action/" ui-sref="customer.new"><i class="fa fa-plus"></i> Novo Cliente</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table datatable="ng" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Nascimento</th>
                            <th>Telefone</th>
                            <th>E-mail</th>
                            <th class="sorting_disabled">#</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="customer in model.Customers" ui-sref-active="active">
                            <td>{{customer.Name}}</td>
                            <td>{{customer.BirthDate}}</td>
                            <td>{{customer.PhonePrincipal}}</td>
                            <td>{{customer.Email}}</td>
                            <td>
                                <a href="#" ui-sref="customer.edit({ customerId: customer.MongoID, index: $index })"><i class="fa fa-edit"></i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <section ui-view></section>
</div>